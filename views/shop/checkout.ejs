<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>
    <div class="container border">
        <div class="row justify-content-center">

          <div class="col-md-6">
              <h5 class="pt-5 pl-4">Захиалгын жагсаалт</h5>
             
              <ul class="list-group list-group-lg border-none p-3">
                <% products.forEach(p => { %>
                <li class="list-group-item">
                  <div class="row align-item-center">
                    <div class="col-4">
                      <img src="/<%= p.productId.imageUrl %>" alt="" class="img-fluid ">
                    </div>
                    <div class="col">
                      <p class="mb-4 font-size-sm font-weight-bold">
                        <span class="text-muted"><%= p.productId.title %></span>
                        <br>
                        <span class="text-muted">$<%= p.productId.price %></span>
                      </p>
                      <div class="font-size-sm text-muted">
                        Quantity: <%= p.quantity %>
                      </div>
                    </div>
                  </div>
                </li>
                <% }) %>
              </ul>
          </div>
          <div class="col-md-6">
            <h5 class="pt-5 pl-4">Тооцооны хуудас</h5>
            <div class="card mt-4 bg-light shadow-none">
              <div class="card-body ">
                <ul class="list-group list-group-sm ">
                  <li class="list-group-item d-flex">
                    <span>Taxing</span>
                    <span class="ml-auto font-size-sm">0</span>
                  </li>
                  <li class="list-group-item d-flex">
                    <span>Shipping</span>
                    <span class="ml-auto font-size-sm">0</span>
                  </li>
                  <li class="list-group-item d-flex">
                    <span>Total</span>
                    <span class="ml-auto font-size-sm">$<%= totalSum %></span>
                  </li>
                </ul>
              </div>
              <div class="card-footer p-2">
                <button id="order-btn" type="button" class="btn btn-lg btn-block btn-primary">Buy Now</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                  var stripe = Stripe('pk_test_58VzTF7lsV3jtOhgqVDaodIz');
                  var orderBtn = document.getElementById('order-btn');
                  orderBtn.addEventListener('click', function(){
                      stripe.redirectToCheckout({
                          sessionId: '<%= sessionId %>'
                      })
                  })
                </script>
              </div>
            </div>
            
            

          </div>

           
        </div>
      
    </div>
    <%- include('../includes/end.ejs')%>
