<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs')%>
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                
                <% if(orders.length <= 0) { %>
                    <h5>Nothing there!</h5>
                <% } else { %>
             
                    <% orders.forEach(order => { %>
                        <div class="card border-success mb-3">
                            <div class="card-header">Order ID: <%= order._id %><a role="button" href="/orders/<%= order._id %>" class="float-right btn btn-outline-primary btn-sm">Invoice</a></div>
                            <div class="card-body">
                                <ul class="list-group">
                                    <% order.products.forEach(p => { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center"><%= p.product.title %>
                                            <span class="badge badge-primary badge-pill"><%= p.quantity %> </span>
                                            
                                        </li>
                                    <% }) %>
                                </ul>
                            </div>
                          </div>              
    
                    <% }) %>               
                 
                  <% } %>
            </div>
        </div>
    </div>
    <%- include('../includes/end.ejs')%>