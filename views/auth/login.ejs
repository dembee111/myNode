<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-offset-4">
                <% if (errorMessage) { %>                   
                    <div class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                <% } %>
                <form action="/login" method="POST" novalidate>
                    <div class="form-group">
                        <label for="email">E-Mail</label>
                        <input 
                            type="email" 
                            class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" 
                            id="email" 
                            aria-describedby="emailHelp" 
                            name="email" 
                            value="<%= oldInput.email %>">

                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input 
                            type="password" 
                            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" 
                            id="password" 
                            aria-describedby="emailHelp" 
                            name="password" 
                            value="<%= oldInput.password %>">

                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">    
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <br>
                <small><a href="/reset">Forget Password</a></small>
                
            </div>
        </div>

    </div>
    <%- include('../includes/end.ejs')%>
