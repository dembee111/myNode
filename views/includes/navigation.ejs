<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">e-Shopify</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item <%= path === '/' ? 'active' : '' %>">
                        <a class="nav-link" href="/">Shop <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item <%= path === '/products' ? 'active' : '' %>">
                        <a class="nav-link" href="/products">Products</a>
                    </li>
                    <% if(isAuthenticated) { %>

                    <li class="nav-item <%= path === '/cart' ? 'active' : '' %>">
                        <a class="nav-link" href="/cart">Cart</a>
                    </li>

                    <li class="nav-item <%= path === '/orders' ? 'active' : '' %>">
                        <a class="nav-link" href="/orders">Orders</a>
                    </li>
                    <li class="nav-item <%= path === '/admin/add-product' ? 'active' : '' %>">
                        <a class="nav-link" href="/admin/add-product">Add Product</a>
                    </li>

                    <li class="nav-item <%= path === '/admin/products' ? 'active' : '' %>">
                        <a class="nav-link" href="/admin/products">Admin Product</a>
                    </li>
                    <% } %>

                    <% if(!isAuthenticated){ %>                
                        <li class="nav-item <%= path === '/login' ? 'active' : '' %>">
                            <a href="/login" class="nav-link ">Login</a>
                        </li>
                        <li class="nav-item <%= path === '/signup' ? 'active' : '' %>">
                            <a href="/signup" class="nav-link ">Signup</a>
                        </li>                  
                    <% } else { %>
                </ul>
                
                <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">                    
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
                </form>
                <% } %>
                
            </div>
        </div>

    </nav>
</header>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-white">Best Online Shop in USA</h1>
        <p class="lead text-white">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
    </div>
</div>
